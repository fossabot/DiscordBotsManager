{% extends 'pages/base.html.twig' %}


{% block title %} Installation page {% endblock %}

{% block stylesheets %}
    <meta content="noindex, nofollow" name="robots">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet"><link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link href="{{ asset('css/styleFormInstall.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}

<body>
<!-- partial:index.partial.html -->

<!--PEN CONTENT     -->
<div class="content">
  <!--content inner-->
  <div class="content__inner">
    <div class="container overflow-hidden">
      <!--multisteps-form-->
      <div class="multisteps-form">
        <!--progress bar-->
        <div class="row">
          <div class="col-12 col-lg-8 ml-auto mr-auto mb-4">
            <div class="multisteps-form__progress">
              <button class="multisteps-form__progress-btn js-active" type="button" title="User Info">User Info</button>
              <button class="multisteps-form__progress-btn" type="button" title="Order Info">Order Info</button>
              <button class="multisteps-form__progress-btn" type="button" title="Comments">Comments</button>
            </div>
          </div>
        </div>
        <!--form panels-->
        <div class="row">
          <div class="col-12 col-lg-8 m-auto">
            <!--<form class="multisteps-form__form">-->
            {{ form_start(form, { 'attr': {'class': 'multisteps-form__form'} }) }}
              <!--single form panel-->
              <div class="multisteps-form__panel shadow p-4 rounded js-active bg-discord" data-animation="scaleIn">
                <h3 class="multisteps-form__title color-discord">Your User Info</h3>
                <div class="multisteps-form__content">
                  <div class="form-row mt-4">
                    <div class="col-12 col-sm-6">
                        <!--<input class="multisteps-form__input form-control" type="text" placeholder="Login"/>-->
                        {{ form_label(form.username, 'Username', {'label_attr': {'class': 'color-discord'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'Username' }}) }}
                    </div>
                    <div class="col-12 col-sm-6 mt-4 mt-sm-0">
                        <!--<input class="multisteps-form__input form-control" type="email" placeholder="Email"/>-->  
                    </div>
                  </div>
                  <div class="form-row mt-4">
                    <div class="col-12 col-sm-6">
                        <!--<input class="multisteps-form__input form-control" type="password" placeholder="Password"/>-->
                        {{ form_label(form.password.first, 'Password', {'label_attr': {'class': 'color-discord'}}) }}
                        {{ form_widget(form.password.first, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'Password'}} )  }}
                    </div>
                    <div class="col-12 col-sm-6 mt-4 mt-sm-0">
                        <!--<input class="multisteps-form__input form-control" type="password" placeholder="Repeat Password"/>-->
                        {{ form_label(form.password.second, 'Confirm Password', {'label_attr': {'class': 'color-discord'}} ) }}
                        {{ form_widget(form.password.second, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'Confirm Password'}} )  }}
                    </div>
                  </div>
                  <div class="button-row d-flex mt-4">
                    <button class="btn btn-primary ml-auto js-btn-next button-discord" type="button" title="Next">Next</button>
                  </div>
                </div>
              </div>
              <!--single form panel-->
				<div class="multisteps-form__panel shadow p-4 rounded " data-animation="scaleIn">
                <h3 class="multisteps-form__title color-discord">database Info</h3>
                <div class="multisteps-form__content">
                  <div class="row">
                    <div class="col-12 col-md-6 mt-4">
						{{ form_label(form.databasetype, 'database type', {'label_attr': {'class': 'color-discord'}} ) }}
                		{{ form_widget(form.databasetype, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'database type'}} )  }}
                    </div>
					<div class="col-12 col-md-6 mt-4">
						{{ form_label(form.databasename, 'database name', {'label_attr': {'class': 'color-discord'}} ) }}
                		{{ form_widget(form.databasename, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'database name'}} )  }}
                    </div>
                    <div class="col-12 col-md-6 mt-4">
						          {{ form_label(form.adress, 'database adress', {'label_attr': {'class': 'color-discord'}} ) }}
                    	{{ form_widget(form.adress, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'database adress'}} )  }}
                    </div>
                </div>
                <div class="row">
                    <div class="button-row d-flex mt-4 col-12">
                      <button class="btn btn-primary js-btn-prev button-discord" type="button" title="Prev">Prev</button>
                      <button class="btn btn-primary ml-auto js-btn-next button-discord" type="button" title="Next">Next</button>
                    </div>
                </div>
                </div>
              </div>
              <!--single form panel-->
            <div class="multisteps-form__panel shadow p-4 rounded bg-discord" data-animation="scaleIn">
                <h3 class="multisteps-form__title color-discord">Arguments</h3>
                <div class="multisteps-form__content">
                	<div class="form-row mt-4">
                    	<!--<textarea class="multisteps-form__textarea form-control" placeholder="Additional Comments and Requirements"></textarea>-->
                    	{{ form_widget(form.arguments, {'attr': {'class': 'multisteps-form__input form-control input-discord', 'placeholder': 'arguments'}} )  }}
                  	</div>
                  	<div class="button-row d-flex mt-4">
                    	<button class="btn btn-primary js-btn-prev button-discord" type="button" title="Prev">Prev</button>
                    	<!--<button class="btn btn-success ml-auto" type="button" title="Send">Send</button>-->
                        {{ form_widget(form.send, {'attr': {'class': 'btn ml-auto button-discord', 'value': 'send'}} )  }}
                  	</div>
                </div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'></script>
    <script  src="{{ asset('js/script.js') }}"></script>
{% endblock %}
 